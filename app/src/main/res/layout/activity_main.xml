<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cfuri.marcomantovanismusic.MainActivity">

    <TextView
        android:id="@+id/arrangements_text_view"
        style="@style/CategoryStyle"
        android:background="@color/category_arrangements"
        android:text="@string/category_arrangements" />

    <TextView
        android:id="@+id/compositions_text_view"
        style="@style/CategoryStyle"
        android:background="@color/category_compositions"
        android:text="@string/category_compositions" />

    <TextView
        android:id="@+id/mp3_text_view"
        style="@style/CategoryStyle"
        android:background="@color/category_mp3"
        android:text="@string/category_mp3" />

    <TextView
        android:id="@+id/transcriptions_text_view"
        style="@style/CategoryStyle"
        android:background="@color/category_transcriptions"
        android:text="@string/category_transcriptions" />
</LinearLayout>