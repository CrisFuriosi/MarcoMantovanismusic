<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/background"
        android:orientation="vertical"

        tools:context="com.example.cfuri.marcomantovanismusic.MainActivity">

        <TextView
            android:id="@+id/arrangements_text_view"
            style="@style/CategoryStyle"
            android:text="@string/category_arrangements" />

        <TextView
            android:id="@+id/compositions_text_view"
            style="@style/CategoryStyle"
            android:text="@string/category_compositions" />

        <TextView
            android:id="@+id/mp3_text_view"
            style="@style/CategoryStyle"
            android:text="@string/category_mp3" />

        <TextView
            android:id="@+id/transcriptions_text_view"
            style="@style/CategoryStyle"
            android:text="@string/category_transcriptions" />
    </LinearLayout>
</ScrollView>