<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/arrangements_text_view"
            style="@style/CategoryStyle"
            android:text="@string/category_arrangements" />

        <TextView
            android:id="@+id/compositions_text_view"
            style="@style/CategoryStyle"
            android:text="@string/category_compositions" />

        <TextView
            android:id="@+id/transcriptions_text_view"
            style="@style/CategoryStyle"
            android:text="@string/category_transcriptions" />

        <TextView
            android:id="@+id/mp3_text_view"
            style="@style/CategoryStyle"
            android:text="@string/mp3" />

    </LinearLayout>
</ScrollView>