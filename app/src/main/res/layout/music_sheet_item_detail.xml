<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/detail_activity_item_name"
        style="@style/WhiteRoundedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:textSize="@dimen/biggerTextSize"
        android:textStyle="bold"
        tools:text="music sheet name" />

    <ImageView
        android:id="@+id/detail_activity_item_image"
        style="@style/WhiteRoundedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/resource_image"
        android:padding="@dimen/padding"
        tools:src="@drawable/pdf_image" />

    <Button
        android:id="@+id/detail_activity_play_button"
        style="@style/WhiteRoundedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pdf_download_button" />

</LinearLayout>

