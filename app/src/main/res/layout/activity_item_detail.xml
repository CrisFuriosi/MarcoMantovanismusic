<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.example.cfuri.marcomantovanismusic.MainActivity">

    <TextView
        android:id="@+id/detail_activity_item_name"
        style="@style/ItemListStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:textSize="@dimen/biggerTextSize"
        android:textStyle="bold"
        android:gravity="center"
        tools:text="song name" />

    <ImageView
        style="@style/ItemListStyle"
        android:id="@+id/detail_activity_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="@dimen/padding"
        android:contentDescription="@string/resource_image"
        tools:src="@drawable/empty_positioner"/>

    <SeekBar
        android:id="@+id/detail_activity_item_seek_bar"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:padding="@dimen/padding"
        android:layout_height="wrap_content"  />

    <LinearLayout
        android:layout_weight="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <Button
        style="@style/ItemListStyle"
        android:id="@+id/detail_activity_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play" />
    <Button
        style="@style/ItemListStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_activity_pause_button"
        android:text="Pause" />

    </LinearLayout>

</LinearLayout>
