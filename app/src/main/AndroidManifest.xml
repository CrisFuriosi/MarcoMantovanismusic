<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cfuri.marcomantovanismusic">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ArrangementsForBandsActivity"
            android:label="@string/category_arrangements" />
        <activity
            android:name=".CompositionsActivity"
            android:label="@string/category_compositions" />
        <activity
            android:name=".Mp3Activity"
            android:label="@string/category_mp3" />
        <activity
            android:name=".TranscriptionsForEnsemblesActivity"
            android:label="@string/category_transcriptions" />
        <activity
            android:name=".ItemDetailActivity"
            android:parentActivityName="com.example.cfuri.marcomantovanismusic.Mp3Activity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Mp3Activity" />


        </activity>
    </application>


</manifest>