<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/detail_activity_item_name"
            style="@style/WhiteRoundedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/biggerTextSize"
            android:layout_weight="0"
            android:textStyle="bold"
            tools:text="song name" />

        <ImageView
            android:layout_weight="1"
            android:id="@+id/detail_activity_item_image"
            style="@style/WhiteRoundedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/resource_image"
            android:padding="@dimen/padding"
            tools:src="@drawable/mp3_image" />


        <Button
            android:layout_weight="0"
            android:id="@+id/detail_activity_download_button"
            style="@style/WhiteRoundedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mp3_play_button" />

</LinearLayout>